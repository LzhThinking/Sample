<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lzh.sample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".mpandroidchart.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".mvp.view.UserInfoActivity"></activity>
        <activity android:name=".MockViewActivity" />
        <activity
            android:name=".FragmentTestActivity"
            android:configChanges="orientation" />
        <activity android:name=".mpandroidchart.custombarchart.StateBarChartActivity" />
        <activity
            android:name=".mpandroidchart.ChartActivity"
            android:launchMode="singleTask" />
        <activity android:name=".TestActivity" />

        <activity
            android:name=".MainActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ViewTestActivity"
            android:launchMode="singleTask"
            android:icon="@drawable/fragmentation_help">
        </activity>
        <activity android:name=".matrix.MatrixActivity" />
    </application>

</manifest>